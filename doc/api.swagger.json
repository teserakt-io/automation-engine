{
  "swagger": "2.0",
  "info": {
    "title": "c2ae-api",
    "version": "version not set"
  },
  "host": "127.0.0.1:8886",
  "schemes": [
    "https"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/rules": {
      "get": {
        "summary": "Retrieve list of existing rules",
        "operationId": "ListRules",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/pbRulesResponse"
            }
          }
        },
        "tags": [
          "C2AutomationEngine"
        ]
      },
      "post": {
        "summary": "Create a new rule",
        "operationId": "AddRule",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/pbRuleResponse"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/pbAddRuleRequest"
            }
          }
        ],
        "tags": [
          "C2AutomationEngine"
        ]
      },
      "put": {
        "summary": "Update an existing rule",
        "operationId": "UpdateRule",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/pbRuleResponse"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/pbUpdateRuleRequest"
            }
          }
        ],
        "tags": [
          "C2AutomationEngine"
        ]
      }
    },
    "/rules/{ruleId}": {
      "get": {
        "summary": "Retrieve a single rule, by its ID",
        "operationId": "GetRule",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/pbRuleResponse"
            }
          }
        },
        "parameters": [
          {
            "name": "ruleId",
            "in": "path",
            "required": true,
            "type": "integer",
            "format": "int32"
          }
        ],
        "tags": [
          "C2AutomationEngine"
        ]
      },
      "delete": {
        "summary": "Remove a rule",
        "operationId": "DeleteRule",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/pbDeleteRuleResponse"
            }
          }
        },
        "parameters": [
          {
            "name": "ruleId",
            "in": "path",
            "required": true,
            "type": "integer",
            "format": "int32"
          }
        ],
        "tags": [
          "C2AutomationEngine"
        ]
      }
    }
  },
  "definitions": {
    "pbActionType": {
      "type": "string",
      "enum": [
        "UNDEFINED_ACTION",
        "KEY_ROTATION"
      ],
      "default": "UNDEFINED_ACTION",
      "title": "List of supported ActionType"
    },
    "pbAddRuleRequest": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string"
        },
        "action": {
          "$ref": "#/definitions/pbActionType"
        },
        "triggers": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/pbTrigger"
          }
        },
        "targets": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/pbTarget"
          }
        }
      }
    },
    "pbDeleteRuleResponse": {
      "type": "object",
      "properties": {
        "ruleId": {
          "type": "integer",
          "format": "int32"
        }
      }
    },
    "pbRule": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int32"
        },
        "description": {
          "type": "string"
        },
        "action": {
          "$ref": "#/definitions/pbActionType"
        },
        "lastExecuted": {
          "type": "string",
          "format": "date-time"
        },
        "triggers": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/pbTrigger"
          }
        },
        "targets": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/pbTarget"
          }
        }
      }
    },
    "pbRuleResponse": {
      "type": "object",
      "properties": {
        "rule": {
          "$ref": "#/definitions/pbRule"
        }
      }
    },
    "pbRulesResponse": {
      "type": "object",
      "properties": {
        "rules": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/pbRule"
          }
        }
      }
    },
    "pbTarget": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int32"
        },
        "type": {
          "$ref": "#/definitions/pbTargetType"
        },
        "expr": {
          "type": "string"
        }
      }
    },
    "pbTargetType": {
      "type": "string",
      "enum": [
        "ANY",
        "TOPIC",
        "CLIENT"
      ],
      "default": "ANY",
      "title": "List of supported TargetType"
    },
    "pbTrigger": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int32"
        },
        "type": {
          "$ref": "#/definitions/pbTriggerType"
        },
        "settings": {
          "type": "string",
          "format": "byte"
        }
      }
    },
    "pbTriggerType": {
      "type": "string",
      "enum": [
        "UNDEFINED_TRIGGER",
        "TIME_INTERVAL",
        "EVENT"
      ],
      "default": "UNDEFINED_TRIGGER",
      "title": "List of supported TriggerType"
    },
    "pbUpdateRuleRequest": {
      "type": "object",
      "properties": {
        "ruleId": {
          "type": "integer",
          "format": "int32"
        },
        "description": {
          "type": "string"
        },
        "action": {
          "$ref": "#/definitions/pbActionType"
        },
        "triggers": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/pbTrigger"
          }
        },
        "targets": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/pbTarget"
          }
        }
      },
      "description": "UpdateRuleRequest will fetch the rule identified by ruleId,\nand override its description, action, triggers and targets values\nwith those provided."
    }
  }
}
